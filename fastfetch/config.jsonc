      "key": "Shell:",
      "keyColor": "34",
    },
    {
      "type": "terminal",
      "key": "Terminal:",
      "keyColor": "34",
    },
    {
      "type": "wm",
      "key": "WM:",
      "keyColor": "34",
    },
    {
      "type": "cursor",
      "key": "Cursor:",
      "keyColor": "34",
    },
    {
      "type": "terminalfont",
      "key": "Terminal Font:",
      "keyColor": "34",
    },
    {
      "type": "uptime",
      "key": "Uptime:",
      "keyColor": "34",
    },
    {
      "type": "datetime",
      "format": "{1}-{3}-{11}",
